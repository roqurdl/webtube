extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
       input(name="username", placeholder="Write Username", type="text", required)
       input(name="password", placeholder="Write Password", type="password", required)
       input(type="submit" value="Login")
       br
    include partials/social-login
    div.auth-switch 
            span Don't have an account? 
                a(href="/join") Create one now &rarr;