doctype html
html(lang="ko")
    head
        title #{pageTitle} | Webtube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav
                ul 
                    if pageTitle !== "Home" 
                        li
                            a(href="/") Home
                    if pageTitle !== "Uploading Video"
                        li 
                            a(href="/videos/upload") Upload Video
                    if pageTitle !== "Search Videos"
                        li 
                            a(href="/search") Search
                    if pageTitle !== "Join"
                        li 
                            a(href="/join") Join
                    
        main
            block content
    include partials/footer