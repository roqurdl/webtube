extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="videos/*", required,id="video",name="video")
        input(name="title" placeholder="Title", required, type="text", maxlength=40)
        input(name="description" placeholder="Discription", required, type="text", minlength=20)
        input(name="hashtags" placeholder="Hashtags, seperated by comma.", required, type="text")
        input(type="submit" value="Upload Video")