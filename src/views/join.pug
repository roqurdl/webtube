extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
       input(name="email", placeholder="Write Email", type="email", required)
       input(name="username", placeholder="Write Username", type="text", required)
       input(name="password", placeholder="Write Password", type="password", required)
       input(name="password2", placeholder="Confirm Password", type="password", required)
       input(name="name", placeholder="Write your Name", type="text", required)
       input(name="location", placeholder="Write Location", type="text" required)
       input(type="submit" value="Join")
    hr
    div 
            span Already have an account? 
                a(href="/login") Log in now &rarr;